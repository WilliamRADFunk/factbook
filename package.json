{
  "name": "factbook",
  "version": "0.1.2",
  "description": "Serves as an independent data scraping module, complete with ontology and full scraping ability for the CIA World Factbook site",
  "main": "lib/api.js",
  "scripts": {
    "build": "tsc",
    "clean:dist": "npm-run-all clean:dist:*",
    "clean:dist:json": "rimraf dist/**/*.json",
    "clean:dist:jsonld": "rimraf dist/ontology/**/*.jsonld",
    "clean:dist:images": "rimraf dist/images/**/*.*",
    "clean:dist:rdf": "rimraf dist/ontology/**/*.rdf",
    "clean:logs": "rimraf logs/*log*",
    "copy:ontology": "npm-run-all copy:jsonld copy:owl",
    "copy:jsonld": "copyfiles -u 1 ontology/*.json dist/ontology/jsonld/",
    "copy:owl": "copyfiles -u 1 ontology/*.rdf dist/ontology/owl/",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "scrape": "ts-node src/index.ts -- --max-old-space-size=16000",
    "start": "run-s clean:logs clean:dist scrape copy:ontology zip -- --recurse-directories=false",
    "test": "echo \"Error: no test specified\" && exit 1",
    "zip": "bestzip dist/images.zip dist/images/*"
  },
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/WilliamRADFunk/factbook.git"
  },
  "keywords": [
    "data",
    "big",
    "big-data",
    "data-scraping",
    "scraping",
    "ontology",
    "json",
    "json-ld",
    "CIA",
    "CIA-factbook",
    "world",
    "factbook",
    "world-factbook",
    "factbook.json",
    "countries"
  ],
  "author": "William RAD Funk",
  "license": "UNLICENSED",
  "dependencies": {
    "@types/cheerio": "^0.22.11",
    "@types/graceful-fs": "^4.1.3",
    "@types/request-promise": "^4.1.42",
    "bestzip": "^2.1.2",
    "bluebird": "^3.5.4",
    "cheerio": "^1.0.0-rc.2",
    "copyfiles": "^2.1.0",
    "formatter-json": "^0.1.1",
    "html-to-text": "^4.0.0",
    "image-downloader": "^3.4.2",
    "log4js": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "request": "^2.34.0",
    "request-promise": "^4.2.4",
    "rimraf": "^2.6.3",
    "simple-node-logger": "^18.12.22",
    "ts-node": "^8.0.3",
    "typescript": "^3.3.3333",
    "uuid-by-string": "^2.1.0"
  },
  "devDependencies": {
    "prettier": "^1.17.0",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "typings": "^2.1.1"
  }
}
